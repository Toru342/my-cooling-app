<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>溶銑温度予測アプリ (Newton's Cooling)</title>
  <style>
    /* 全体設定 */
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      font-family: sans-serif;
      font-size: 1.25rem; /* ベース文字サイズ */
      background: #f0f0f0;
    }
    
    /* メインコンテナ: 縦横中央寄せ */
    #app {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100vh; 
    }

    /* タイトル */
    h1 {
      margin-bottom: 30px;
      font-size: 2rem; /* タイトル大きめ */
      color: #333;
    }

    /* ラベル＋入力欄 */
    .input-row {
      display: flex;
      align-items: center;
      margin: 10px 0;
    }
    .input-row label {
      display: inline-block;
      width: 180px;
      margin-right: 10px;
      text-align: right;
    }
    .input-row input[type="number"] {
      width: 120px;
      padding: 5px;
      font-size: 1.2rem;
    }

    /* 固定値の入力欄 */
    .readonly-input {
      background-color: #ccc;
      border: 1px solid #999;
    }

    /* ボタン */
    #calc-btn {
      margin-top: 25px;
      padding: 10px 20px;
      font-size: 1.2rem;
      cursor: pointer;
      background: #0275d8;
      color: #fff;
      border: none;
      border-radius: 4px;
    }
    #calc-btn:hover {
      background: #025aa5;
    }

    /* 結果表示 */
    #result {
      margin-top: 30px;
      font-size: 1.5rem;
      color: #222;
      text-align: center;
      line-height: 1.6;
    }
    #temp-value {
      font-weight: bold;
      color: #d33;
    }
    #diff-value {
      font-weight: bold;
      color: #337ab7;
    }
  </style>
</head>
<body>
<div id="app">
  <h1>溶銑温度予測アプリ</h1>

  <div class="input-row">
    <label>溶銑質量 [t]</label>
    <input id="ton" type="number" step="any" value="400">
  </div>
  <div class="input-row">
    <label>初期温度 [℃]</label>
    <input id="temp_init" type="number" step="any" value="1500">
  </div>
  <div class="input-row">
    <label>外気温 [℃]</label>
    <input id="temp_env" type="number" step="any" value="10">
  </div>
  <div class="input-row">
    <label>経過時間 [h]</label>
    <input id="time_h" type="number" step="any" value="24">
  </div>

  <!-- 固定値(編集不可) -->
  <div class="input-row">
    <label>比熱容量 [J/(kg·K)]</label>
    <input id="cp" class="readonly-input" type="number" step="any" value="700" readonly>
  </div>
  <div class="input-row">
    <label>有効熱伝達率 [W/K]</label>
    <input id="UA" class="readonly-input" type="number" step="any" value="200" readonly>
  </div>

  <button id="calc-btn">計算</button>

  <div id="result"></div>
</div>

<script>
function calcTemp() {
  // 入力値の取得
  const tonValue   = parseFloat(document.getElementById('ton').value);        // 溶銑質量(t)
  const tempInit   = parseFloat(document.getElementById('temp_init').value);  // 初期温度(℃)
  const tempEnv    = parseFloat(document.getElementById('temp_env').value);   // 外気温(℃)
  const timeHours  = parseFloat(document.getElementById('time_h').value);     // 経過時間(h)
  // 固定値(編集不可)
  const cpValue    = parseFloat(document.getElementById('cp').value);         // 比熱容量 [J/(kg·K)]
  const UAValue    = parseFloat(document.getElementById('UA').value);         // 有効熱伝達率 [W/K=J/s/K]

  // 単位変換 (t -> kg)
  const massKg = tonValue * 1000;

  // 冷却係数 (1/hに変換)
  // k [1/s] = UA / (m * cp)
  // k [1/h] = k [1/s] * 3600
  const kPerHour = (UAValue / (massKg * cpValue)) * 3600;

  // ニュートンの冷却則
  // T(t) = T_env + (T0 - T_env)*exp(-k*t)
  const tempAfter = tempEnv + (tempInit - tempEnv) * Math.exp(-kPerHour * timeHours);

  // 増減値 = (予測温度) - (初期温度)
  // 正の値なら上昇、負の値なら温度が下がったことを示す
  const diff = tempAfter - tempInit;

  // 結果表示 (小数点1桁で丸め)
  const tempText = tempAfter.toFixed(1);
  const diffText = diff.toFixed(1);

  // メッセージ組立
  let msg = `<span id="temp-value">予測溶銑温度: ${tempText} ℃</span><br>`;
  msg += `<span id="diff-value">初期温度との差: ${diffText} ℃</span>`;

  document.getElementById('result').innerHTML = msg;
}

// イベントリスナー設定
document.getElementById('calc-btn').addEventListener('click', calcTemp);
</script>

</body>
</html>
